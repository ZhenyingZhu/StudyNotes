    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch webpack",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/webpack-dev-server",
            "runtimeArgs": [
                "--hot",
                "--history-api-fallback"
            ],
            "port": 9000,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
   ]
}